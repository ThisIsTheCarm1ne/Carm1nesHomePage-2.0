<div id='blob'></div>

<style>
#blob {
	background-color: black;
	height: 200px;
	aspect-ratio: 1;
	position: absolute;
	left: 50%;
	top: 50%;
	translate: -50% -50%;
	border-radius: 50%;
	background: white; 
	animation: rotate 20s infinite;
	opacity: 0.1;
	filter: blur(200px);
	z-index: -1;
}
@keyframes rotate {
	from {
		rotate: 0deg;
	}
	50% {
		scale: 1 1.5;
	}
	to {
		rotate: 360deg;
	}
}
</style>

<script>
const blob = document.getElementById("blob");

window.onpointermove = event => { 
	const { clientX, clientY } = event;

	blob.animate({
		left: `${clientX}px`,
		top: `${clientY}px`
	}, { duration: 2000, fill: 'forwards'});
}
</script>
